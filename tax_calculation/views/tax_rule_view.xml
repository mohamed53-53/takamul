<odoo>
    <data>
        <record id="salary_tax_rule_form" model="ir.ui.view">
            <field name="name">salary.tax.rule.from</field>
            <field name="model">salary.tax.rule</field>
            <field name="arch" type="xml">
                <form string="Tax">
                    <sheet>
                        <group col="4">
                            <field name="level"/>
                            <field name="name"/>
                            <field name="amount_from"/>
                            <field name="amount_to"/>
                            <field name="force_amount_from"/>
                            <field name="force_amount_to"/>
                            <field name="tax_rate"/>
                            <field name="tax_exemption"/>
                            <field name="total_tax"/>
                            <field name="total_discount"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="salary_tax_rule_tree" model="ir.ui.view">
            <field name="name">salary.tax.rule.tree</field>
            <field name="model">salary.tax.rule</field>
            <field name="arch" type="xml">
                <tree string="Tax">
                    <field name="level"/>
                    <field name="name"/>
                    <field name="amount_from"/>
                    <field name="amount_to"/>
                    <field name="force_amount_from"/>
                    <field name="force_amount_to"/>
                    <field name="tax_rate"/>
                    <field name="tax_exemption"/>
                    <field name="total_tax"/>
                    <field name="total_discount"/>
                </tree>
            </field>
        </record>

        <record id="action_salary_rule_tax_view" model="ir.actions.act_window">
            <field name="name">Salary Tax</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">salary.tax.rule</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
              </p><p>
                <!-- More details about what a user can do with this object will be OK -->
              </p>
            </field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="menu_salary_rule_tax" name="Salary Tax" parent="hr_work_entry_contract_enterprise.menu_hr_payroll_configuration" action="action_salary_rule_tax_view" sequence="12"/>

    </data>
</odoo>