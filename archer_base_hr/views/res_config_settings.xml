<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="archer_base_hr.res_config_settings_view_form_inherit" model="ir.ui.view">
            <field name="name">archer_base_hr.res.config.settings.view.form.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">

                <div id="fcm_server">
                    <h2>FCM Server</h2>
                    <div class="row mt16 o_settings_container" name="fcm_server_setting_container">
                        <div class="col-12 col-lg-8 o_setting_box" id="fcm_server_key">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">FCM Server</span>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label string="FCM Server Key" for="fcm_server_key" class="col-lg-4 o_light_label"/>
                                        <field name="fcm_server_key" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                </xpath>

            </field>
        </record>

    </data>
</odoo>